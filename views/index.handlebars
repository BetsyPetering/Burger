<div class="jumbotron">

  <a data-flickr-embed="true" href="https://www.flickr.com/photos/pinkattitude/49766550128/in/dateposted/">
    <img src="https://live.staticflickr.com/65535/49766550128_b111e877da_n.jpg" width="320" height="320"
      alt="burger"></a>

  <h1>Eat-da-Burgers!</h1>

</div>

<div class="container" id="burgerList">
  <div class="row">
    <div class="col">
      <h2>Burgers that are not devoured!</h2>

      <ul>
        {{#each burgers}}
        {{#unless this.devoured}}
        <div class="burger-list">
          {{this.id}}. {{this.name}}<button class="change-devour" data-id="{{id}}">Eat Me!</button>
        </div>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col">

      <h2>Burgers that are Devoured!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <div class="burger-list">
          {{this.id}}. {{this.name}}
        </div>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col centered">

      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">

          <button type="submit">Add Burger</button>

        </div>


      </form>
    </div>
  </div>